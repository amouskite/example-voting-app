pipeline {
    agent any
    tools {
      nodejs 'node 8.9.0'
    }	    
    stages {
        stage('Build') {
            when{
              changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app'
                dir('result'){
                  sh 'npm install'
		            }
            }
        }
        stage('Test') {
	          when{
              changeset "**/result/**"
            }
            steps {
                echo 'Testing result app'
                dir('result'){
                  sh "npm install"
                  sh 'npm test'
		            }
            }
        }
    }
}
