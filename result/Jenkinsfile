pipeline {
    agent {
      docker {
        image 'node:8.9.1-alpine'
      }
    }  
    stages {
        stage('Build') {
            when{
              changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app'
                dir('result'){
                  sh 'npm install'
		            }
            }
        }
        stage('Test') {
	          when{
              changeset "**/result/**"
            }
            steps {
                echo 'Testing result app'
                dir('result'){
                  sh "npm install"
                  sh 'npm test'
		            }
            }
        }
    }
}
